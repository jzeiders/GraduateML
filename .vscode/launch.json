{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Run All Tests",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "args": [
                "discover",
                "-s",
                ".",
                "-p",
                "test_*.py"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Current Test File",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "args": [
                "${file}"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        },
        {
            "name": "Python: Current Test Case",
            "type": "debugpy",
            "request": "launch",
            "module": "unittest",
            "args": [
                "${file}:${lineNumber}"
            ],
            "console": "integratedTerminal",
            "justMyCode": false
        }
    ]
}